{{!< default}}

<article class="{{post_class}}">

    {{#post}}

        <header>
            <h1 class="post-title">{{{title}}}</h1>
            <div class="clearfix">
                <ul class="post-meta">
                    <li><span class="ion-person"></span>{{author}}</li>
                    {{#if tags}}
                        <li><span class="ion-pricetags"></span>{{tags}}</li>
                    {{/if}}
                    <li><span class="ion-calendar"></span><time datetime="{{date format='DD-MM-YYYY'}}">{{date format="dddd DD MMMM YYYY"}}</time></li>
                </ul>
            </div>
            {{#if image}}
                <img class="post-cover-image" src="{{image}}" alt="{{title}} cover image" />
            {{/if}}
        </header>

        <section class="post-content">
            {{content}}
        </section>

        <section class="share">
            <div class="share-content">
                <p class="info prompt">Share this post:</p>
                <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="ion-social-twitter"></span>
                </a>
                <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="ion-social-facebook"></span>
                </a>
                <a href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="ion-social-googleplus"></span>
                </a>
            </div>
        </section>

        <footer class="post-footer">

            {{#if author}}
                <section class="author">
                    <div class="author-image" style="background: url({{author.image}})"></div>
                    <h4 class="author-name">Author: <a href="{{author.website}}">{{author.name}}</a></h4>
                    <p class="author-bio">{{author.bio}}</p>
                </section>
            {{/if}}

        </footer>

    {{/post}}

    {{> comments-disqus}}

</article>
