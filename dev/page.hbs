{{!< default}}

<article class="{{post_class}}">

    {{#post}}

        <header>
            <h1 class="post-title">{{{title}}}</h1>
            {{#if image}}
                <img class="post-cover-image" src="{{image}}" alt="{{title}} cover image" />
            {{/if}}
        </header>

        <section class="post-content">
            {{content}}
        </section>

    {{/post}}

</article>
